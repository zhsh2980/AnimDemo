<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_border">

        <!-- ↓↓↓↓↓↓ 小点位移  ↓↓↓↓↓↓ -->
        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_1"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="55dp"
            app:radius="2dp"
            app:ring_color="@color/jumeired"
            app:ring_width="2dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_2"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="35dp"
            app:radius="3dp"
            app:ring_color="@color/social_tag_4"
            app:ring_width="3dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_3"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            app:radius="3dp"
            app:ring_color="@color/jumeired"
            app:ring_width="3dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_4"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            app:radius="1.5dp"
            app:ring_color="@color/social_tag_2"
            app:ring_width="1.5dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_5"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="3dp"
            app:radius="3dp"
            app:ring_color="@color/social_tag_2"
            app:ring_width="3dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_6"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="17dp"
            app:radius="3dp"
            app:ring_color="@color/social_tag_2"
            app:ring_width="3dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/iv_round_point_7"
            style="@style/round_view_small_pop"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="55dp"
            app:radius="2dp"
            app:ring_color="@color/social_tag_2"
            app:ring_width="2dp"/>

        <!-- ↑↑↑↑↑↑ 小点位移  ↑↑↑↑↑↑ -->

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/round_view"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/round_view_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"/>

        <anim.bro.com.practice.view.RoundView
            android:id="@+id/round_view_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="25dp"/>

        <anim.bro.com.practice.view.ClipProgressView
            android:id="@+id/iv_progress_clip_view"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/shape_progress_bg"
            android:src="@drawable/clip_progress"/>

        <anim.bro.com.practice.util.RedNewAnimView
            android:id="@+id/iv_red_move"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/red"
            android:visibility="invisible"/>

        <anim.bro.com.practice.view.SwapAnimImageView
            android:id="@+id/iv_red_origin"
            android:layout_width="39dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/red_new"/>

        <RelativeLayout
            android:id="@+id/wrapper"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="105dp">

            <anim.bro.com.practice.view.TransTextView
                android:id="@+id/iv_clip_view"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/pink"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="14"
                android:maxLines="1"
                android:text="哈哈呵呵呵呵"
                android:textColor="@color/white"
                android:textSize="14dp"
                />

            <anim.bro.com.practice.view.TransTextView
                android:id="@+id/iv_clip_view_2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/pink"
                android:gravity="center"
                android:text="哈哈哈哈你是"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="invisible"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_3d"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/red"/>

        <ImageView
            android:id="@+id/iv_shop_short"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_progress_bg"
            android:visibility="invisible"/>

        <ImageView
            android:src="@drawable/icon_red_packet_entrance_guest_new"
            android:id="@+id/iv_shop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            tools:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_red_translate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="放大平移"/>

        <Button
            android:id="@+id/btn_cicle_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="圆环扩散"/>

        <Button
            android:id="@+id/btn_pop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小气泡"/>

        <Button
            android:id="@+id/btn_coin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="硬币位移"/>

        <Button
            android:id="@+id/btn_3d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3D 旋转"/>

        <Button
            android:id="@+id/btn_clip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="裁剪"/>

        <Button
            android:id="@+id/btn_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="进度"/>

        <Button
            android:id="@+id/btn_radar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="转圈"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_anim_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="完整动画"/>

    <Button
        android:id="@+id/btn_show_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:text="显示购物按钮"/>

    <Button
        android:id="@+id/btn_cancel_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:text="淡化气泡"/>

</FrameLayout>