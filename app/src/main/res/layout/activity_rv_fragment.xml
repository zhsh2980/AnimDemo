<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RvFragmentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_top_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转到1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_top_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_top_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转到2"
            app:layout_constraintLeft_toRightOf="@+id/btn_top_1"
            app:layout_constraintRight_toLeftOf="@+id/btn_top_3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_top_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转到3"
            app:layout_constraintLeft_toRightOf="@+id/btn_top_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons_top" />

</androidx.constraintlayout.widget.ConstraintLayout>