<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="-80dp"
            android:background="@color/red_checked_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="11111111"
                android:textColor="@color/black" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/frame_1"
            android:background="@color/colorLabelYellow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="22222222"
                android:textColor="@color/black" />

        </FrameLayout>

    </RelativeLayout>


    <CheckBox
        android:id="@+id/color_size_rb"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_color_size_chb_bg"
        android:button="@null"
        android:text="衣服"
        android:gravity="center"
        android:minWidth="48dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="@color/magic_size_color_text_color"
        android:textSize="12dp" />



</LinearLayout>