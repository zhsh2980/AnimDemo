    <TextView
        android:id="@+id/tv_good_buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="¥ 290"
        android:textColor="#F14850"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <TextView
        android:id="@+id/tv_good_buy_price_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="350"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_good_buy_price"
        app:layout_constraintStart_toEndOf="@+id/tv_good_buy_price" />

    <TextView
        android:id="@+id/tv_good_buy_now"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:background="@drawable/shape_good_buy_now"
        android:text="立即购买"
        android:textColor="#333"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_good_buy_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_good_buy_price" />

    <View
        android:layout_width="match_parent"
        android:background="#6c7b8a"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_good_buy_now"
        android:layout_height="0.5dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_good_buy_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.5dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:text="猜你喜欢"
        android:textColor="#ff778087"
        android:paddingBottom="20dp"
        android:textSize="14dp"
        />


