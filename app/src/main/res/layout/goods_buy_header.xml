<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <anim.bro.com.practice.goods.banner.HBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:indicator_drawable_selected="@drawable/yellow_radius"
        app:indicator_height="6dp"
        app:indicator_width="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_good_buy_title_below"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="28.5dp"
        android:text="猫头伞柄黑胶女折叠黑胶女折胶女晴雨"
        android:lines="1"
        android:ellipsize="end"
        android:maxEms="20"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/tv_good_buy_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_good_buy_title_below"
        app:layout_constraintBottom_toTopOf="@+id/tv_good_buy_title_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="来自淘宝"
        android:lines="1"
        android:ellipsize="end"
        android:maxEms="20"
        android:textColor="#ffffffff"
        android:textSize="13dp"
        />

