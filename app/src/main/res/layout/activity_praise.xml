<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/video_not_praise"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_heart_left_top"
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/heart_small_left"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_heart_left_bottom"
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/heart_small_left"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_heart_right_top"
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/heart_small_right"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_heart_right_bottom"
            android:layout_width="4dp"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:src="@drawable/heart_small_right"/>


    </RelativeLayout>


</RelativeLayout>