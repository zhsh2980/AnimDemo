<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_tab_title"
    tools:context=".ui.CycleBoxActivity">

    <Button
        android:id="@+id/btn_anim_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="动画开始" />

    <FrameLayout
        android:id="@+id/frame_box_open_new_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_box_open_new_2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/treasure_anim_new_2" />

        <FrameLayout
            android:id="@+id/frame_root_amount_cy"
            android:layout_width="33dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_rp_amount_text"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_amount_cy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+999"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </FrameLayout>



    </FrameLayout>
</RelativeLayout>